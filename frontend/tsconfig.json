{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["app/*"],
      "app/*": ["app/*"],
      "context/*": ["context/*"],
      "hooks/*": ["hooks/*"],
      "components/*": ["components/*"],
      "constants/*": ["constants/*"],
      "lib/*": ["lib/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
